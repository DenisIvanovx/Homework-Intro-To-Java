import java.util.Scanner;

/**
 * Created by express on 12-Oct-15.
 */
public class SumNumberFrom1toN {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int n = sc.nextInt();
        int result = 0;

        for (int i = 0; i <= n; i++) {
            result += i;
        }
        System.out.println(result);
    }
}
